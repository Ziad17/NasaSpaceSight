<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:textViewStyle">@style/TextView</item>

        <item name="imageButtonStyle">@style/Button</item>
    </style>


    <!--TextViews-->
    <style name="TextView" parent="WrapWrapLayout">
        <item name="android:textSize">@dimen/SecondaryTextSize</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/paddingDefault</item>
        <item name="android:textColor">@color/DeepBlack</item>
    </style>

    <style name="TextView.StartBlack" parent="TextView">
        <item name="android:textColor">@color/DeepBlack</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="TextView.CenterBlack" parent="TextView">
        <item name="android:textColor">@color/DeepBlack</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextView.StartMatch" parent="TextView">
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="TextView.StartMatchSecond" parent="TextView.StartMatch">
        <item name="android:textColor"> @color/grey</item>
    </style>


    <!--########################################################################################-->
    <!--Button-->
    <style name="Button" parent="WrapWrapLayout">
        <item name="android:padding">@dimen/paddingDefault</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/DeepBlack</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="Button.Acceptance" parent="Button">
        <item name="android:textColor">@color/DeepWhite</item>
        <item name="android:background">@drawable/button_background_acceptance</item>
    </style>
    <!--########################################################################################-->
    <!--Layouts-->

    <style name="WrapMatchLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MatchMatchLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>

    </style>
    <style name="WrapWrapLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="MatchWrapLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>

    </style>

    <!--########################################################################################-->
    <!--ImageView-->
    <style name="ImageView" parent="WrapWrapLayout">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/image_view_background</item>
    </style>
    <!--########################################################################################-->
    <!--EditText-->
    <style name="EditText" parent="WrapWrapLayout">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColor">@color/DeepBlack</item>
        <item name="android:padding">@dimen/paddingDefault</item>
        <item name="android:textSize">@dimen/SecondaryTextSize</item>

    </style>
    <style name="EditTextMatchBlack" parent="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/DeepBlack</item>

    </style>

    <!--########################################################################################-->
    <!--Spinner-->
    <style name="Spinners" parent="WrapWrapLayout">

        <item name="android:background">@drawable/spinner_default</item>
        <item name="android:textColor">@color/DeepBlack</item>
        <item name="android:padding">@dimen/paddingDefault</item>
        <item name="android:gravity">center</item>
    </style>


    <!--########################################################################################-->

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>


    </style>




</resources>
