<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/normal_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalImageHeight"
        android:src="@drawable/ic_broken_image_black_24dp"
        android:scaleType="center"
        android:layout_gravity="center" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Date"
        android:id="@+id/date_text_view"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/normal_image_title"
        android:gravity="center"
        android:paddingStart="20dp"
        android:layout_gravity="center"
        android:paddingEnd="20dp"
        android:layout_margin="@dimen/paddingDefault"
        android:text="Loading .."
        android:textSize="@dimen/PrimaryTextSize"/>


    </LinearLayout>

</LinearLayout>